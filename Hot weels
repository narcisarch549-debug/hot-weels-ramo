  <script>
    // Splash al inicio
    window.onload = function() {
      setTimeout(function() {
        document.getElementById('splash').style.opacity = 0;
        setTimeout(function(){
          document.getElementById('splash').style.display = 'none';
          document.getElementById('main-content').style.display = 'block';
        }, 1000);
      }, 1800);
    };

    // Logo transiciÃ³n y muestra los carritos
    function showRamoLogo() {
      document.getElementById('main-content').style.display = 'none';
      document.getElementById('ramo-logo').style.display = 'flex';
      setTimeout(function() {
        document.getElementById('ramo-logo').style.opacity = 0;
        setTimeout(function(){
          document.getElementById('ramo-logo').style.display = 'none';
          document.getElementById('main-content').style.display = 'block';
          document.getElementById('carritos-grid').style.display = 'grid';
          document.getElementById('no-content').style.display = 'none';
        }, 1000);
      }, 1600);
    }

    // Muestra el contenido triste
    function showNoContent() {
      document.getElementById('carritos-grid').style.display = 'none';
      document.getElementById('no-content').style.display = 'block';
    }
  </script>
